{
  "manifest_version": 3,
  "name": "URLying",
  "version": "1.0",
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js", "js/popup.js"],
      "css": ["css/content.css"]
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "options_page": "html/options.html"
}
